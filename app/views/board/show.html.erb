<!-- TOP CONTAINER -->
<div class= "candidate_1">
  <div class="bio behind">
    <p class="bio-description" id="click-frame-bio">
      <%= @candidate_1.bio %>
    </p>
    <div class="action-bar">
      <i class="fav material-icons">star</i>
      <!--^ Activer si le user clique sur cette div -->
      <span class="user-name-display"><%= @candidate_1.firstname %> <%= @candidate_1.lastname %></span>
      <!-- Activer si le user clique sur cette div -->
      <i class="lock material-icons">lock</i>
    </div>
  </div>
  <div class="picture ahead">
    <%= image_tag @candidate_1.avatar.url(:original), class: "img-fluid", :id=>"click-frame-pix"%>
    
    <div class="action-bar">
      <i class="fav material-icons">star</i>
      <!--^ Activer si le user clique sur cette div -->
