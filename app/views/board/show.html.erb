<!-- TOP CONTAINER -->
<div class= "candidate_1">
  <div class="bio">
    <p class="bio_description">
      <%= @candidate_1.bio %>
    </p>
    <div class="action-bar">
      <i class="fav material-icons">star_border</i>
      <!-- Activer si le user clique sur cette div -->
      <!-- <i class="fav material-icons active">star</i> -->
      <span class="user-name-display"><%= @candidate_1.firstname %> <%= @candidate_1.lastname %></span>
      <i class="lock material-icons">lock_open</i>
      <!-- Activer si le user clique sur cette div -->
      <!-- <i class="lock material-icons active">lock</i> -->
    </div>
  </div>
  <div class="picture" id="defaultFront">
    <%= image_tag @candidate_1.avatar.url(:original), class: "img-fluid"  %>
    <div class="action-bar">
      <!-- <i class="fav material-icons">star_border</i> -->
      <!-- Activer si le user clique sur cette div -->
      <i class="fav material-icons active">star</i>
      <span class="user-name-display"><%= @candidate_1.firstname %> <%= @candidate_1.lastname %></span>
      <!-- <i class="lock material-icons">lock_open</i> -->
      <!-- Activer si le user clique sur cette div -->
      <i class="lock material-icons active">lock</i>
    </div>
  </div>
</div>
<!-- MIDDLE -->
<div class= "middle-container">

    <%= link_to users_show_path(current_user) do %>
      <%= image_tag current_user.avatar.url(:thumb), class: "circle-image"  %>
    <% end %>

    <%= link_to "board/confirmation" do %>
    <button type="button" class="btn btn-outline-danger">MATCH</button>
    <% end %>
    

    <%= link_to next_path, type:"button", class:"action_link", method: :get do %>
    <button type="button" class="action_link">Next</button>
    <% end %>


</div>
