      <!-- Activer si le user clique sur cette div -->
      <i class="lock material-icons">lock</i>
    </div>
  </div>
</div>
<!-- MIDDLE -->
<div class= "middle-container">

    <%= link_to users_show_path(current_user) do %>
      <%= image_tag current_user.avatar.url(:thumb), class: "circle-image"  %>
    <% end %>

    <%= link_to board_confirmation_path do %>
    <button type="button" class="btn btn-outline-danger">MATCH</button>
    <% end %>
    

    <%= link_to next_path, type:"button", class:"action_link", method: :get do %>
    <button type="button" class="action_link">Next</button>
    <% end %>


</div>
