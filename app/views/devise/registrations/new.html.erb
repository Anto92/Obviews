<div class="container container-registration">

<h2>Obviews!</h2>
<br>
<br>
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email",class: "field1" %>
  </div>

  <div class="field">
    
    
    <%= f.password_field :password, autocomplete: "off",placeholder:"Password (6 chars min)",class: "field1" %>
  </div>

  <div class="field">
   
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password Confirmation",class: "field1" %>
  </div>

  <div class="actions">
    <%= f.submit "S'INSCRIRE" %>
  </div>
  <% end %>

  <div class= "action_link">
  <%= link_to "Déjà inscrit ?", new_user_session_path, class: "login" %>
  </div>

</div>
