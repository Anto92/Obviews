<div class="container container-my-profile">
    <div class= "my-profile">
      <div class="my-bio behind">
        <p class="bio-description-self">
          <%= current_user.bio %>
        </p>
        <div class="action-bar">
          <span class="user-name-display"><%= current_user.firstname %> <%= current_user.lastname %></span>
            <%= link_to edit_user_registration_path do %>
              <i class="material-icons material-icons-edit" style="font-size: 30px">mode_edit</i>
            <% end %>
        </div>
      </div>
      <div class="picture-self ahead">
        <%= image_tag current_user.avatar.url(:original), class: "img-fluid"  %>
        <div class="action-bar">
          <span class="user-name-display"><%= current_user.firstname %> <%= current_user.lastname %></span>
            <%= link_to edit_user_registration_path do %>
              <i class="material-icons material-icons-edit" style="font-size: 30px">mode_edit</i>
              <% end %>
        </div>
      </div>
    </div>

    <div class="karma-score">
      Karma: <%= current_user.karma %>
    </div>

    <a class="action-button" href="/match/index" >Mes views</a>

    <div>
      <iframe src="https://www.facebook.com/plugins/share_button.php?href=https%3A%2F%2Fobviews-dev.herokuapp.com&layout=button&size=large&mobile_iframe=true&width=89&height=28&appId" width="89" height="28" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
    </div>

    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="material-icons exit-icon" style="font-size: 30px">exit_to_app</i>
      <% end %>
    <% end %>


    <div class="action_link action_link_user-show">
      <a href='/board/show'>Retour</a>
    </div>
</div>
